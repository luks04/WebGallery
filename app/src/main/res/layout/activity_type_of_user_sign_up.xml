<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TypeOfUserSignUpActivity">

    <Button
            android:text="Artista"
            android:layout_width="363dp"
            android:layout_height="102dp"
            android:id="@+id/buttonChooseArtistSU"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.8"
            android:textSize="24sp"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonChooseBuyerSU"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.71"/>
    <Button
            android:text="Comprador"
            android:layout_width="363dp"
            android:layout_height="102dp"
            android:id="@+id/buttonChooseBuyerSU" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.666"
            android:textSize="24sp" style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimary" android:layout_marginBottom="132dp"/>
</android.support.constraint.ConstraintLayout>