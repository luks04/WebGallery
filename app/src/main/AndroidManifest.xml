<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ean.webgalleryofficial">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".TypeOfUserLogInActivity">
        </activity>
        <activity android:name=".TypeOdUserSingUpActivity">
        </activity>
        <activity android:name=".TypeOfUserSignUpActivity">
        </activity>
        <activity
                android:name=".ArtistLogInActivity"
                android:label="@string/title_activity_artist_log_in"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ean.webgalleryofficial.MainActivity"/>
        </activity>
        <activity android:name=".BuyerLogInActivity">
        </activity>
        <activity android:name=".ArtistSignUpActivity">
        </activity>
        <activity android:name=".BuyerSignUpActivity">
        </activity>
        <activity android:name=".ArtistProfileActivity">
        </activity>
        <activity android:name=".BuyerProfileActivity">
        </activity>
        <activity
                android:name=".AddArtworkActivity"
                android:label="@string/title_activity_add_artwork"
                android:parentActivityName=".ArtistProfileActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ean.webgalleryofficial.ArtistProfileActivity"/>
        </activity>
        <activity
                android:name=".ScrollingAddArtworkActivity"
                android:label="@string/title_activity_scrolling_add_artwork"
                android:parentActivityName=".ArtistProfileActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ean.webgalleryofficial.ArtistProfileActivity"/>
        </activity>
        <activity android:name=".AddArtworkActivity2">
        </activity>
        <activity
                android:name=".ScrollingPurchasedArtworksActivity"
                android:label="@string/title_activity_scrolling_purchased_artworks"
                android:parentActivityName=".BuyerProfileActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ean.webgalleryofficial.BuyerProfileActivity"/>
        </activity>
        <activity android:name=".PruebaActivity">
        </activity>
        <activity android:name=".SeePurchasedArtworksActivity">
        </activity>
        <activity android:name=".SeeArtistArtworksActivity">
        </activity>
        <activity android:name=".ToBuyArtworkActivity">
        </activity>
        <activity android:name=".SearchArtworksActivity">
        </activity>
    </application>

</manifest>